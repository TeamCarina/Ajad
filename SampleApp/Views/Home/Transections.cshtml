@model List<SampleApp.Model.Models.Transection>
@{
    ViewBag.Title = "Transections";
    var account = (SampleApp.Model.Models.Account)ViewBag.AccountDetails;
    int i = 0;
}
<div class="row">
    <div class="col-md-12">
        <h2>Welcome @account.AspNetUsers.FirstName @account.AspNetUsers.LastName !</h2>
        <p>
            <div style="height: 30px; background-color: gray;">
                <label style="padding-left: 20px; padding-top: 5px;">Transection details</label></div>
            <div style="border: 1px solid gray; padding: 20px;">

                <table style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Remarks</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Closing Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TransectionDate</td>
                                <td>@item.Remarks</td>
                                @if (item.TransectionType.Type.Equals("Debit"))
                                {
                                    <td>@item.Amount</td>
                                    <td></td>
                                }
                                else
                                {
                                    <td></td>
                                    <td>@item.Amount</td>
                                }
                                @if (i == 0)
                                {
                                    <td>@item.Account.CurrentBalance</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                            </tr>
                                i++;
                        }
                    </tbody>
                </table>
            </div>
        </p>
        <p><a class="btn btn-default" href="/Home/Index">Back</a></p>
    </div>
</div>