<div class="content">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="x_panel">

                <div class="x_content">

                    <a href="#" class="btn btn-campaign pull-right"><i class="fa fa-arrow-right" aria-hidden="true"></i>Go to Dashboard</a>

                    <div class="bg-whte">
                        <div class="col-md-5">
                           @* <form name="developer-code">*@
                            
                                @using (Html.BeginForm("GetCode", "Admin", FormMethod.Post, new { }))
{
                                <textarea readonly id="txtcopycode" name="txtcopycode" class="form-control" rows="5" placeholder="code will be here.">

                                     <script type="text/javascript" src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async='async'></script>
  <script type="text/javascript">
      var OneSignal = OneSignal || [];
      OneSignal.push(["init", {
          appId: "@Model.APPId",
          autoRegister: false, /* Set to true to automatically prompt visitors */
          subdomainName: '@Model.Subdomain',
          notifyButton: {
              enable: true /* Set to false to hide */
          }
      }]);
  </script>
             </textarea>

                                
                                <br>

                                <div class="input-group input-group-icon col-md-10">
                                    <div class="input-icon">Send code to developer(s)</div>
